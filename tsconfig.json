{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "strict": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [],
    // Prevent emitting JS into src â€“ Vite handles transpilation. Build will rely on type checking only.
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
